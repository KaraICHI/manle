<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_hot_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Saitama"
            android:textColor="#404040" />

        <TextView
            android:id="@+id/tv_hot_addtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="3小时前" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rl"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_hot_figure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/ll_hot_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"></LinearLayout>

        <TextView
            android:id="@+id/tv_hot_saying"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="齐木楠雄的最爱，咖啡布丁超好吃"
            android:textColor="#434343" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#e1e1e1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center_vertical"
            >
            <EditText
                android:id="@+id/et_send_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:lines="1"
                android:imeOptions="actionSend"
                android:background="@drawable/search_home_shape_gray"
                android:textSize="15sp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/send_comment_black"
                android:visibility="gone"
                />

            <CheckBox
                android:id="@+id/tv_hot_likes"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_toLeftOf="@id/tv_hot_comments"
                android:drawableLeft="@drawable/community_like_selector"
                android:drawablePadding="10dp"
                android:button="@null"
                android:gravity="center_vertical"
                android:text="1"
                android:layout_marginRight="20dp"
                android:checked="false"
                />


            <!--        <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/community_mid_line" />-->

            <RadioButton
                android:id="@+id/tv_hot_comments"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/community_message_icon"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:button="@null"
                android:text="1" />
        </RelativeLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/ib_new_post_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/new_user_icon_1" />

</RelativeLayout>